{
	"scopeName": "melodic-css.injection",
	"injectionSelector": "L:source.ts, L:source.tsx, L:source.js, L:source.jsx",
	"patterns": [
		{
			"include": "#css-template"
		}
	],
	"repository": {
		"css-template": {
			"begin": "(?x)(\\bcss)\\s*`",
			"beginCaptures": {
				"1": {
					"name": "entity.name.function.tagged-template.melodic"
				}
			},
			"end": "`",
			"patterns": [
				{
					"include": "#interpolation"
				},
				{
					"include": "source.css"
				}
			]
		},
		"interpolation": {
			"begin": "\\$\\{",
			"beginCaptures": {
				"0": {
					"name": "punctuation.section.embedded.begin.melodic"
				}
			},
			"end": "\\}",
			"endCaptures": {
				"0": {
					"name": "punctuation.section.embedded.end.melodic"
				}
			},
			"patterns": [
				{
					"include": "source.ts"
				}
			]
		}
	}
}
