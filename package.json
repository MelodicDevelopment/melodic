{
	"name": "@melodicdev/core",
	"private": false,
	"version": "1.4.0",
	"description": "A lightweight, modern web component framework built on native browser APIs.",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/MelodicDevelopment/melodic.git"
	},
	"bugs": {
		"url": "https://github.com/MelodicDevelopment/melodic/issues"
	},
	"homepage": "https://github.com/MelodicDevelopment/melodic#readme",
	"keywords": [
		"web-components",
		"framework",
		"signals",
		"typescript",
		"templates"
	],
	"type": "module",
	"files": [
		"lib",
		"bundle",
		"README.md",
		"LICENSE"
	],
	"types": "./lib/index.d.ts",
	"exports": {
		".": {
			"types": "./lib/index.d.ts",
			"default": "./lib/index.js"
		},
		"./bootstrap": {
			"types": "./lib/bootstrap/index.d.ts",
			"default": "./lib/bootstrap/index.js"
		},
		"./config": {
			"types": "./lib/config/index.d.ts",
			"default": "./lib/config/index.js"
		},
		"./components": {
			"types": "./lib/components/index.d.ts",
			"default": "./lib/components/index.js"
		},
		"./forms": {
			"types": "./lib/forms/index.d.ts",
			"default": "./lib/forms/index.js"
		},
		"./http": {
			"types": "./lib/http/index.d.ts",
			"default": "./lib/http/index.js"
		},
		"./injection": {
			"types": "./lib/injection/index.d.ts",
			"default": "./lib/injection/index.js"
		},
		"./interfaces": {
			"types": "./lib/interfaces/index.d.ts",
			"default": "./lib/interfaces/index.js"
		},
		"./routing": {
			"types": "./lib/routing/index.d.ts",
			"default": "./lib/routing/index.js"
		},
		"./signals": {
			"types": "./lib/signals/index.d.ts",
			"default": "./lib/signals/index.js"
		},
		"./state": {
			"types": "./lib/state/index.d.ts",
			"default": "./lib/state/index.js"
		},
		"./template": {
			"types": "./lib/template/index.d.ts",
			"default": "./lib/template/index.js"
		}
	},
	"workspaces": [
		"packages/cli",
		"packages/melodic-components"
	],
	"scripts": {
		"dev": "vite",
		"build": "tsc && vite build",
		"build:lib": "tsc -p tsconfig.build.json",
		"build:bundle": "vite build --config vite.config.bundle.ts --mode development && vite build --config vite.config.bundle.ts --mode production",
		"build:components": "npm --workspace @melodicdev/components run build",
		"prepublish:components": "npm run build:components",
		"publish:components": "npm --workspace @melodicdev/components publish --access public",
		"build:cli": "npm --workspace @melodicdev/cli run build",
		"prepublish:cli": "npm run build:cli",
		"publish:cli": "npm --workspace @melodicdev/cli publish --access public",
		"prepublishOnly": "npm run build:lib",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"test": "vitest",
		"test:unit": "vitest run",
		"prepreview": "npm run build && npm run build:lib",
		"preview": "vite preview",
		"benchmark": "vite --config vite.config.benchmark.ts --open /",
		"benchmark:update": "npm run build && node web/benchmark/update-benchmarks.js",
		"demo": "vite --config vite.config.demo.ts",
		"docs": "vite --config packages/melodic-components/vite.config.docs.ts"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^8.39.0",
		"@typescript-eslint/parser": "^8.39.0",
		"@vitest/ui": "^3.2.4",
		"esbuild": "^0.25.12",
		"eslint": "^9.35.0",
		"eslint-config-prettier": "^10.1.8",
		"happy-dom": "^20.0.11",
		"terser": "^5.44.1",
		"typescript": "~5.9.3",
		"vite": "npm:rolldown-vite@7.2.5",
		"vite-plugin-static-copy": "^3.1.6",
		"vitest": "^3.2.4"
	},
	"overrides": {
		"vite": "npm:rolldown-vite@7.2.5"
	}
}
