{
	"name": "@melodicdev/core",
	"private": false,
	"version": "1.0.0",
	"description": "A lightweight, modern web component framework built on native browser APIs.",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/MelodicDevelopment/melodic.git"
	},
	"bugs": {
		"url": "https://github.com/MelodicDevelopment/melodic/issues"
	},
	"homepage": "https://github.com/MelodicDevelopment/melodic#readme",
	"keywords": [
		"web-components",
		"framework",
		"signals",
		"typescript",
		"templates"
	],
	"type": "module",
	"files": [
		"lib",
		"README.md",
		"LICENSE"
	],
	"types": "./lib/index.d.ts",
	"exports": {
		".": {
			"types": "./lib/index.d.ts",
			"default": "./lib/index.js"
		},
		"./bootstrap": {
			"types": "./lib/bootstrap/index.d.ts",
			"default": "./lib/bootstrap/index.js"
		},
		"./components": {
			"types": "./lib/components/index.d.ts",
			"default": "./lib/components/index.js"
		},
		"./forms": {
			"types": "./lib/forms/index.d.ts",
			"default": "./lib/forms/index.js"
		},
		"./http": {
			"types": "./lib/http/index.d.ts",
			"default": "./lib/http/index.js"
		},
		"./injection": {
			"types": "./lib/injection/index.d.ts",
			"default": "./lib/injection/index.js"
		},
		"./interfaces": {
			"types": "./lib/interfaces/index.d.ts",
			"default": "./lib/interfaces/index.js"
		},
		"./routing": {
			"types": "./lib/routing/index.d.ts",
			"default": "./lib/routing/index.js"
		},
		"./signals": {
			"types": "./lib/signals/index.d.ts",
			"default": "./lib/signals/index.js"
		},
		"./state": {
			"types": "./lib/state/index.d.ts",
			"default": "./lib/state/index.js"
		},
		"./template": {
			"types": "./lib/template/index.d.ts",
			"default": "./lib/template/index.js"
		}
	},
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"dev": "vite",
		"dev:company": "npx vite --config vite.config.company.ts",
		"dev:framework": "npx vite --config vite.config.framework.ts",
		"build": "tsc && vite build",
		"build:company": "npx vite build --config vite.config.company.ts",
		"build:framework": "npx vite build --config vite.config.framework.ts",
		"build:lib": "tsc -p tsconfig.build.json",
		"build:cli": "npm --workspace @melodicdev/cli run build",
		"prepublishOnly": "npm run build:lib",
		"test": "vitest",
		"test:unit": "vitest run",
		"prepreview": "npm run build && npm run build:lib",
		"preview": "vite preview",
		"benchmark": "vite --open /benchmark/performance-test.html",
		"benchmark:update": "npm run build && node benchmark/update-benchmarks.js"
	},
	"devDependencies": {
		"@vitest/ui": "^3.2.4",
		"happy-dom": "^20.0.11",
		"terser": "^5.44.1",
		"typescript": "~5.9.3",
		"vite": "npm:rolldown-vite@7.2.5",
		"vitest": "^3.2.4"
	},
	"overrides": {
		"vite": "npm:rolldown-vite@7.2.5"
	}
}
