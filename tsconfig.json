{
	"compilerOptions": {
		"target": "ES2022",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"useDefineForClassFields": false,
		"module": "ESNext",
		"lib": ["ES2022", "DOM", "DOM.Iterable"],
		"types": ["vite/client"],
		"skipLibCheck": true,

		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": true,
		"moduleDetection": "force",
		"noEmit": true,
		"baseUrl": ".",
		"paths": {
			"@melodicdev/core": ["src"],
			"@melodicdev/components": ["packages/melodic-components/src/index.ts"],
			"@melodicdev/components/theme": ["packages/melodic-components/src/theme/index.ts"],
			"@melodicdev/components/button": ["packages/melodic-components/src/components/forms/button/index.ts"],
			"@melodicdev/components/spinner": ["packages/melodic-components/src/components/feedback/spinner/index.ts"],
			"@melodicdev/components/input": ["packages/melodic-components/src/components/forms/input/index.ts"],
			"@melodicdev/components/textarea": ["packages/melodic-components/src/components/forms/textarea/index.ts"],
			"@melodicdev/components/checkbox": ["packages/melodic-components/src/components/forms/checkbox/index.ts"],
			"@melodicdev/components/radio": ["packages/melodic-components/src/components/forms/radio/index.ts"],
			"@melodicdev/components/toggle": ["packages/melodic-components/src/components/forms/toggle/index.ts"],
			"@melodicdev/components/card": ["packages/melodic-components/src/components/foundation/card/index.ts"],
			"@melodicdev/components/stack": ["packages/melodic-components/src/components/foundation/stack/index.ts"],
			"@melodicdev/components/divider": ["packages/melodic-components/src/components/foundation/divider/index.ts"],
			"@melodicdev/components/alert": ["packages/melodic-components/src/components/feedback/alert/index.ts"],
			"@melodicdev/components/badge": ["packages/melodic-components/src/components/data-display/badge/index.ts"],
			"@melodicdev/components/badge-group": ["packages/melodic-components/src/components/data-display/badge-group/index.ts"],
			"@melodicdev/components/avatar": ["packages/melodic-components/src/components/data-display/avatar/index.ts"],
			"@melodicdev/components/tag": ["packages/melodic-components/src/components/data-display/tag/index.ts"],
			"@melodicdev/components/tooltip": ["packages/melodic-components/src/components/overlays/tooltip/index.ts"],
			"@melodicdev/components/icon": ["packages/melodic-components/src/components/general/icon/index.ts"],
			"@melodicdev/components/dialog": ["packages/melodic-components/src/components/overlays/dialog/index.ts"],
			"@melodicdev/components/popover": ["packages/melodic-components/src/components/overlays/popover/index.ts"],
			"@melodicdev/components/dropdown": ["packages/melodic-components/src/components/overlays/dropdown/index.ts"],
			"@melodicdev/components/container": ["packages/melodic-components/src/components/foundation/container/index.ts"],
			"@melodicdev/components/progress": ["packages/melodic-components/src/components/feedback/progress/index.ts"],
			"@melodicdev/components/toast": ["packages/melodic-components/src/components/feedback/toast/index.ts"],
			"@melodicdev/components/breadcrumb": ["packages/melodic-components/src/components/navigation/breadcrumb/index.ts"],
			"@melodicdev/components/pagination": ["packages/melodic-components/src/components/navigation/pagination/index.ts"],
			"@melodicdev/components/steps": ["packages/melodic-components/src/components/navigation/steps/index.ts"],
			"@melodicdev/components/sidebar": ["packages/melodic-components/src/components/navigation/sidebar/index.ts"],
			"@melodicdev/components/date-picker": ["packages/melodic-components/src/components/forms/date-picker/index.ts"],
			"@melodicdev/components/table": ["packages/melodic-components/src/components/data-display/table/index.ts"],
			"@melodicdev/components/calendar-view": ["packages/melodic-components/src/components/data-display/calendar-view/index.ts"],
			"@melodicdev/components/activity-feed": ["packages/melodic-components/src/components/data-display/activity-feed/index.ts"],
			"@melodicdev/components/list": ["packages/melodic-components/src/components/data-display/list/index.ts"],
			"@melodicdev/components/radio-card-group": ["packages/melodic-components/src/components/forms/radio-card-group/index.ts"],
			"@melodicdev/components/slider": ["packages/melodic-components/src/components/forms/slider/index.ts"],
			"@melodicdev/components/button-group": ["packages/melodic-components/src/components/forms/button-group/index.ts"],
			"@melodicdev/components/drawer": ["packages/melodic-components/src/components/overlays/drawer/index.ts"],
			"@melodicdev/components/app-shell": ["packages/melodic-components/src/components/sections/app-shell/index.ts"],
			"@melodicdev/components/hero-section": ["packages/melodic-components/src/components/sections/hero/index.ts"],
			"@melodicdev/components/page-header": ["packages/melodic-components/src/components/sections/page-header/index.ts"],
			"@melodicdev/components/login-page": ["packages/melodic-components/src/components/pages/auth/index.ts"],
			"@melodicdev/components/signup-page": ["packages/melodic-components/src/components/pages/auth/index.ts"],
			"@melodicdev/components/dashboard-page": ["packages/melodic-components/src/components/pages/dashboard/index.ts"],
			"@melodicdev/components/directives": ["packages/melodic-components/src/directives/index.ts"]
		},

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedSideEffectImports": true
	},
	"include": ["src", "web"],
	"exclude": ["src/_poc"]
}
